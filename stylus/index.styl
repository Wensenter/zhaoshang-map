@import './mapOverlay.styl'

.map
    width 100vw
    height 100vh
.clear:after
    content ''
    display block 
    clear both
    height 0
    overflow hidden
    visibility hidden
.swiper-button-prev
    left 0 !important
    height 20px !important
    width 20px !important
    background-size 100% 100% !important
.swiper-button-next
    right 0 !important
    height 20px !important
    width 20px !important
    background-size 100% 100% !important
.wrap
    position relative
    top 0
    left 0
    width 100vw
    height 100vh
    overflow hidden
.head
    position absolute
    top 0
    height 60px
    line-height 60px
    width 100vw
    background url('../img/title_clean.png') no-repeat
    background-size 100% 100%
    text-align center
    z-index 3
    .time
        float left
        height 50px
        padding-left 30px
        .time-icon
            display inline-block
            width 16px
            height 16px
            background url('../img/icon_time.png') no-repeat
            background-size 16px 16px
            vertical-align middle
        .time-text
            color #63BEFF
            font-size 18px
            line-height 18px
            height 18px
            vertical-align middle
    .logo
        position absolute
        left 50%
        top 0
        height 60px
        transform translateX(-50%)
        img
            vertical-align middle
            width 135px
            margin-right 15px
        span
            display inline-block
            vertical-align middle
            color #fff
            font-family "Source Han Sans CN"
            font-size 23px
            padding-left 15px
        .line
            display inline-block
            width 1px
            height 20px
            padding 0
            margin 0
            background rgba(63,169,245,0.7)
    .head-right
        float right
        padding-right 30px
        height 50px
        font-size 0
        span 
            float left
            font-size 14px
            color #63BEFF
            display block
            margin-right 20px
        >ul
            float left
            height 50px
            li
                display inline-block
                a
                    color #63BEFF
                    font-size 14px
                    text-decoration none
                    font-weight 500
                    padding 0 10px
                    position relative
            .item
                a:after
                    content ''
                    display block
                    width 1px 
                    height 14px
                    background #5572C4
                    position absolute
                    right 0
                    top 50%
                    transform translateY(-50%)
            .loginout
                a
                    border 0
                    color #D1522B
                    padding-right 0
.install-tip
    z-index 3
    position absolute
    width calc(100% - 600px)
    height 50px
    left 50%
    transform translateX(-50%)
    background linear-gradient(to left,transparent,#88283D,transparent)
    top 60px
    text-align center
    line-height 50px
    color #fff
    font-size 14px
    a
        color #1FCFD4
.left-nav
    z-index 3
    position absolute
    left 50px
    top 100px
    h3.title
        line-height 16px
        font-size 16px
        color #fff
        border-left 4px solid #22B573
        padding-left 14px
    .nav-list
        overflow-x hidden
        overflow-y scroll
        max-height calc(100vh - 150px)
        padding 10px 15px 0
        margin-left -15px
        scrollbar-width none
        -ms-overflow-style none
        >li
            margin-bottom 15px
            width 235px
            height 110px
            border 1px solid #0C4B95
            box-sizing border-box
            padding 10px 10px 10px 40px
            background url('../img/bg_block.png') no-repeat
            background-size cover
            box-shadow 0 0 10px rgba(0,0,0,0.5)
            cursor pointer
            position relative
            >img
                position absolute
                top 15px
                left 15px
            dt
                font-size 18px
                color #57A8E9
                margin-bottom 10px
                padding-right 15px
                span
                    float right
                    color #fff
                    font-size 20px
            dd
                >ul
                    width 100%
                    font-size 0
                    li
                        display inline-block
                        font-size 14px
                        min-width 40px
                        text-align center
                        .title
                            display block
                            color rgba(255,255,255,.6)
                        .num
                            font-size 16px
                            font-weight 600
                    .name 
                        float left
                        text-align left
                        .num
                            color #ffffff
                    .online 
                        float right
                        position relative
                        .num
                            color #39B54A
                        &:after
                            content '/'
                            color rgba(255,255,255,.6)
                            font-size 14px
                            position absolute
                            top 0
                            right -7.5px
                        &:before
                            content '/'
                            color rgba(255,255,255,1)
                            font-size 14px
                            position absolute
                            bottom 0
                            right -7.5px
                    .unusual 
                        float right
                        margin-left 10px
                        .num
                            color #FF4848
        .active
            border-color #2BAFE2
            box-shadow 0 0 5px #2BAFE2
            position relative
            &::before
                content ''
                display block
                border-width 15px
                border-color transparent transparent transparent #2BAFE3
                border-style solid
                position absolute
                right -30px
                top 50%
                transform translateY(-50%)
        &::-webkit-scrollbar 
            display none
.map-title
    position absolute
    top 120px
    left 355px
    .view
        font-size 0
        color #5BB1F2
        display none
        .view-name,.label
            font-size 18px
            text-shadow 7px 7px 5px #000
    .class-1
        display inline
    .main-title
        font-size 36px
        font-family "Source Han Sans CN"
        font-weight bold
        color #fff
        text-shadow 7px 7px 5px rgba(0,0,0,0.7)
        display none
.search
    position absolute
    top 90px
    right 55px
    .search-box
        width 260px
        height 40px
        border 1px solid #1B60A6
        padding-left 35px
        position absolute
        right 0
        overflow hidden
        background rgba(0,0,0,.5)
        input
            padding 0
            margin 0
            height 100%
            width 100%
            background transparent
            outline none
            color #2391C9
            &::-webkit-input-placeholder
                color #2391C9
                font-size 14px
        .search-icon
            position absolute
            left 8px
            top 50%
            transform translateY(-50%)
        .close-icon
            position absolute
            right 60px
            display none
            top 50%
            transform translateY(-50%)
            opacity .6
            cursor pointer
        .search-btn
            position absolute
            right 5px
            top 50%
            height 28px
            width 50px
            transform translateY(-50%)
            background #1B60A7
            color #fff
            font-size 12px
            cursor pointer
            display none
    >.active
        padding-right 80px
        border-bottom 0
        .close-icon
            display block
        .search-btn
            display block
    .search-result
        width 450px
        background #015E9D
        margin-top 40px
        border 1px solid #0E70AE
        box-sizing border-box
        .search-tab-nav
            ul
                background #004489
                border-bottom 1px solid#0E70AE
                font-size 0
                li
                    display inline-block
                    width calc(100% / 4 - 5px)
                    margin-right 5px
                    text-align center
                    line-height 30px
                    font-size 14px
                    color #fff
                    background 	#004C8F
                    cursor pointer
                    &:last-child
                        margin-right 0
                        width calc(100% / 4 )
                .active
                    background #015E9D
                    z-index 2
                    border-bottom 1px solid #015E9D
                    margin-bottom -1px
    .search-tab-content
        padding 25px 15px 30px
        >div
            display none
            min-height 331px
            max-height 331px
            overflow-y scroll
            overflow-x hidden
            .address
                font-size 0
                li
                    font-size 14px
                    line-height 24px
                    font-family "Alibaba Sans"
                    margin-bottom 15px
                    color #fff
                    cursor pointer
                    img
                        vertical-align middle
                        margin-right 15px
                    &:last-child
                        margin-bottom 0
                    &:hover
                        color #63BEFF
            .swiper-head
                margin-bottom 10px
                padding 0 30px
                .left
                    float left
                    a
                        text-decoration none
                        margin-right 10px
                        opacity 0.5
                        &:hover
                            opacity 1
                    .active
                        opacity 1
                        display inline-block
                .pagination
                    position absolute
                    right 0
                    bottom unset
                    left unset
                    right 50px
                    width 50px
                    font-size 12px
                    font-family "Alibaba Sans"
                    color #fff
                    text-align right
            .swiper-body
                padding 0 25px
                position relative
                .swiper-slide
                    padding 0 25px
                    .video-box 
                        font-size 0
                        >div
                            background rgba(0,0,0,.8)
                            color #fff
                            font-size 16px
                            cursor pointer
                    .lg >div
                        width 100%
                        height 235px
                    .md >div
                        display inline-block
                        width calc(50% - 10px)
                        height calc(235px / 2)
                        margin 5px
                    .sm >div
                        display inline-block
                        width calc(100% / 3 - 10px)
                        height calc(235px / 3)
                        margin 5px
                .video-box
                    width 350px
                    height 300px
                    margin 0 auto
                    background rgba(0,0,0,.8)
                    color #fff
                    font-size 16px
                    cursor pointer
                .prev-btn,.next-btn
                    position absolute
                    top 50%
                    transform translateY(-50%)
                    width 25px
                    height 25px
                    line-height 25px
                    font-size 25px
                    text-align center
                    cursor pointer
                    i
                        color #043375
                .prev-btn
                    left 0
                .next-btn
                    right 0
            &::-webkit-scrollbar
                width 4px 
                height 10px
            &::-webkit-scrollbar-thumb 
                border-radius 4px
                height 10px
                background #007cce
            &::-webkit-scrollbar-track
                border-radius 4px
                background transparent
        .active
            display block
.video-right-menu,.project-right-menu
    position absolute
    width 190px
    padding 15px 10px
    background rgba(43,174,226,.5)
    border 1px solid rgba(43,174,226,.8)
    display none
    ul
        li
            width 100%
            height 40px
            padding 0 20px
            line-height 40px
            font-size 16px
            font-family "Alibaba Sans"
            color #fff
            cursor pointer
            background transparent
            img
                vertical-align middle
                margin-right 5px
            &:hover
                background rgba(43,174,226,.7)
.add-video,.add-project
    position absolute
    right 160px
    top calc(100vh - 550px)
    width 420px
    max-height 450px
    border 1px solid rgba(41,171,226,0.9)
    display none
    .head
        width 100%
        height 28px
        background #004187
        padding 0 15px
        border-bottom 1px solid rgba(41,171,226,0.9)
        position relative
        opacity 0.9
        p
            line-height 28px
            font-size 14px
            color #5CB5F7
            text-align left
        img
            position absolute
            top 7px
            right 15px
            cursor pointer
    .body
        padding 15px 15px 20px
        background rgba(0,95,158,0.9)
        form
            .input-box
                display inline-block
                width 210px
                height 32px
                background 	#013166
                border 1px solid #63BEFF
                img
                    vertical-align middle
                    width 20px
                    margin 0 5px
                input
                    height 32px
                    line-height 20px
                    font-size 14px
                    font-family "Source Han Sans CN"
                    color #3FA9F5
                    background transparent
                    &::-webkit-input-placeholder
                        color #3FA9F5
            button
                width 60px
                height 32px
                background #3B93D3
                color #fff
                font-size 14px
                cursor pointer
        .tab
            height 100%
            padding-top 20px
            font-size 0
            overflow hidden
            .tab-nav
                display inline-block
                width 100px
                max-height 320px
                overflow-y scroll
                overflow-x hidden
                border-right 1px dashed rgba(43,174,226,.8)
                &::-webkit-scrollbar
                    display none
                ul
                    li
                        padding 5px 5px
                        margin-bottom 10px
                        span
                            display -webkit-box
                            font-size 13px
                            font-family "Alibaba Sans"
                            color #fff
                            overflow hidden
                            line-height 16px
                            text-overflow ellipsis
                            -webkit-line-clamp 2
                            line-clamp 2
                            -webkit-box-orient vertical
                            cursor pointer
                            background transparent
                        &:last-child
                                margin-bottom 0
                    .active
                        background rgba(1,49,102,.6)
            .tab-content
                width calc(100% - 100px)
                padding-left 30px
                float right
                max-height 320px
                overflow-y scroll
                overflow-x hidden
                &::-webkit-scrollbar
                    display none
                ul
                    min-height 150px
                    li
                        font-size 0
                        color #fff
                        margin-bottom 10px
                        cursor pointer
                        overflow hidden
                        .checkbox
                            display inline-block
                            width 15px
                            height 15px
                            background rgba(1,49,102,.9)
                            margin-right 15px
                            font-size 14px
                            float left
                        .item-name
                            line-height 15px
                            font-size 14px
                    .active
                        .checkbox
                            background 	rgba(80,170,236,.8) url('../img/check.png') no-repeat
                            background-size 100% 100%
                .pageNum
                    margin-top 20px
                    p
                        font-size 14px
                        color rgba(255,255,255,.8)
                        .prev-btn
                            margin-right 15px
                            cursor pointer
                        .next-btn
                            margin-left 15px
                            cursor pointer
.add-project
    .tab-content
        width 100% !important
        padding-left 0 !important
    .pageNum
        text-align center !important
